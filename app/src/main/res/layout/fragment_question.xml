<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".ui.QuestionFragment">


    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="Home"
        android:textColor="@color/orange"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
            app:layout_constraintVertical_bias="0.0">


            <TextView
                android:id="@+id/image_quiz"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/why_quest"
                android:text="Mười vạn câu hỏi vì sao"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_quiz"
                android:layout_width="180dp"
                android:layout_marginStart="20dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:textSize="40dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:background="@drawable/funny_quiz"
                android:text="Đố vui" />


        </LinearLayout>
<LinearLayout

    android:layout_width="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/first_layout"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/image_quiz3"
            android:layout_width="180dp"
            android:layout_marginStart="20dp"
            android:layout_height="200dp"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:background="@drawable/encyclopaedia"
            android:gravity="center"
            android:text="Bách khoa cuộc sống" />

        <TextView
            android:id="@+id/tv_quiz4"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:background="@drawable/illuminatisymbol"
            android:gravity="center"
            android:text="Bí ẩn nhân loại"/>


    </LinearLayout>

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>